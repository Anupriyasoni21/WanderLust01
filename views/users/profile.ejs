<% layout('/layouts/boilerplate') %>

    <div class="container mt-3">
        <div class="row">
            <div class="col-12">
                <!-- Profile Header -->
                <div class="profile-header mb-3">
                    <div class="row align-items-center">
                        <div class="col-md-2 text-center">
                            <div class="profile-avatar">
                                <i class="fa-solid fa-user-circle fa-4x" style="color: var(--accent-color);"></i>
                            </div>
                        </div>
                        <div class="col-md-10">
                            <h3 class="mb-1" style="color: var(--text-primary);">
                                <%= currentUser.username %>
                            </h3>
                            <p class="text-muted mb-1 fs-6">
                                <i class="fa-solid fa-list me-2"></i>
                                Listings created: <%= typeof listingCount !=='undefined' ? listingCount : 0 %>
                            </p>
                            <p class="text-muted mb-1 fs-6">
                                <i class="fa-solid fa-envelope me-2"></i>
                                <%= currentUser.email %>
                            </p>
                            <p class="text-muted mb-0 fs-6">
                                <i class="fa-solid fa-calendar-days me-2"></i>
                                Member since <%= new Date(currentUser.joinDate || new
                                    Date()).toLocaleDateString('en-US', { year: 'numeric' , month: 'long' ,
                                    day: 'numeric' }) %>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Profile Tabs -->
                <ul class="nav nav-tabs mb-3" id="profileTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="view-tab" data-bs-toggle="tab"
                            data-bs-target="#view-profile" type="button" role="tab">
                            <i class="fa-solid fa-eye me-2"></i>View Profile
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="edit-tab" data-bs-toggle="tab" data-bs-target="#edit-profile"
                            type="button" role="tab">
                            <i class="fa-solid fa-edit me-2"></i>Edit Profile
                        </button>
                    </li>
                </ul>

                <!-- Tab Content -->
                <div class="tab-content" id="profileTabsContent">
                    <!-- View Profile Tab -->
                    <div class="tab-pane fade show active" id="view-profile" role="tabpanel">
                        <div class="row">
                            <!-- Basic Info Card -->
                            <div class="col-md-6 mb-4">
                                <div class="profile-card">
                                    <div class="card-header">
                                        <h5><i class="fa-solid fa-user me-2"></i>Basic Information</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="info-item">
                                            <label>Bio:</label>
                                            <p>
                                                <%= currentUser.bio || "Tell us a bit about yourself to make your profile more engaging!" %>
                                            </p>
                                        </div>
                                        <div class="info-item">
                                            <label>Location:</label>
                                            <p>
                                                <% if (currentUser.location) { %>
                                                    <i class="fa-solid fa-location-dot me-2"></i>
                                                    <%= currentUser.location %>
                                                        <% } else { %>
                                                            Not specified
                                                            <% } %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Interests Card -->
                            <div class="col-md-6 mb-4">
                                <div class="profile-card">
                                    <div class="card-header">
                                        <h5><i class="fa-solid fa-heart me-2"></i>Interests & Hobbies</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="info-item">
                                            <label>Hobbies:</label>
                                            <div class="tags-container">
                                                <% if (currentUser.hobbies && currentUser.hobbies.length> 0) { %>
                                                    <% currentUser.hobbies.forEach(hobby=> { %>
                                                        <span class="tag">
                                                            <%= hobby %>
                                                        </span>
                                                        <% }); %>
                                                            <% } else { %>
                                                                <p class="text-muted">No hobbies added</p>
                                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="info-item">
                                            <label>Interests:</label>
                                            <div class="tags-container">
                                                <% if (currentUser.interests && currentUser.interests.length> 0) { %>
                                                    <% currentUser.interests.forEach(interest=> { %>
                                                        <span class="tag">
                                                            <%= interest %>
                                                        </span>
                                                        <% }); %>
                                                            <% } else { %>
                                                                <p class="text-muted">No interests added</p>
                                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Travel Info Card -->
                            <div class="col-md-6 mb-4">
                                <div class="profile-card">
                                    <div class="card-header">
                                        <h5><i class="fa-solid fa-plane me-2"></i>Travel Preferences</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="info-item">
                                            <label>Favorite Destinations:</label>
                                            <div class="tags-container">
                                                <% if (currentUser.favoriteDestinations &&
                                                    currentUser.favoriteDestinations.length> 0) { %>
                                                    <% currentUser.favoriteDestinations.forEach(destination=> { %>
                                                        <span class="tag destination-tag">
                                                            <%= destination %>
                                                        </span>
                                                        <% }); %>
                                                            <% } else { %>
                                                                <p class="text-muted">No favorite destinations added</p>
                                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Social Links Card -->
                            <div class="col-md-6 mb-4">
                                <div class="profile-card">
                                    <div class="card-header">
                                        <h5><i class="fa-solid fa-link me-2"></i>Social Links</h5>
                                    </div>
                                    <div class="card-body">
                                        <% if (currentUser.socialLinks) { %>
                                            <% if (currentUser.socialLinks.website) { %>
                                                <div class="social-link">
                                                    <a href="<%= currentUser.socialLinks.website %>" target="_blank">
                                                        <i class="fa-solid fa-globe me-2"></i>Website
                                                    </a>
                                                </div>
                                                <% } %>
                                                    <% if (currentUser.socialLinks.instagram) { %>
                                                        <div class="social-link">
                                                            <a href="<%= currentUser.socialLinks.instagram %>"
                                                                target="_blank">
                                                                <i class="fa-brands fa-instagram me-2"></i>Instagram
                                                            </a>
                                                        </div>
                                                        <% } %>
                                                            <% if (currentUser.socialLinks.twitter) { %>
                                                                <div class="social-link">
                                                                    <a href="<%= currentUser.socialLinks.twitter %>"
                                                                        target="_blank">
                                                                        <i class="fa-brands fa-twitter me-2"></i>Twitter
                                                                    </a>
                                                                </div>
                                                                <% } %>
                                                                    <% if (currentUser.socialLinks.linkedin) { %>
                                                                        <div class="social-link">
                                                                            <a href="<%= currentUser.socialLinks.linkedin %>"
                                                                                target="_blank">
                                                                                <i
                                                                                    class="fa-brands fa-linkedin me-2"></i>LinkedIn
                                                                            </a>
                                                                        </div>
                                                                        <% } %>
                                                                            <% if (!currentUser.socialLinks.website &&
                                                                                !currentUser.socialLinks.instagram &&
                                                                                !currentUser.socialLinks.twitter &&
                                                                                !currentUser.socialLinks.linkedin) { %>
                                                                                <p class="text-muted">No social links
                                                                                    added</p>
                                                                                <% } %>
                                                                                    <% } else { %>
                                                                                        <p class="text-muted">No social
                                                                                            links added</p>
                                                                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Edit Profile Tab -->
                    <div class="tab-pane fade" id="edit-profile" role="tabpanel">
                        <form action="/profile?_method=PUT" method="POST" class="needs-validation" novalidate>
                            <div class="row">
                                <!-- Basic Information -->
                                <div class="col-md-6 mb-4">
                                    <div class="profile-card">
                                        <div class="card-header">
                                            <h5><i class="fa-solid fa-user me-2"></i>Basic Information</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="mb-3">
                                                <label for="bio" class="form-label">Bio</label>
                                                <textarea class="form-control" id="bio" name="bio" rows="4"
                                                    maxlength="500"
                                                    placeholder="Tell us about yourself..."><%= currentUser.bio || "" %></textarea>
                                                <div class="form-text">Maximum 500 characters</div>
                                            </div>
                                            <div class="mb-3">
                                                <label for="location" class="form-label">Location</label>
                                                <input type="text" class="form-control" id="location" name="location"
                                                    value="<%= currentUser.location || "" %>"
                                                    placeholder="City, Country" maxlength="100">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Interests & Hobbies -->
                                <div class="col-md-6 mb-4">
                                    <div class="profile-card">
                                        <div class="card-header">
                                            <h5><i class="fa-solid fa-heart me-2"></i>Interests & Hobbies</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="mb-3">
                                                <label for="hobbies" class="form-label">Hobbies</label>
                                                <input type="text" class="form-control" id="hobbies" name="hobbies"
                                                    value="<%= currentUser.hobbies ? currentUser.hobbies.join(', ') : '' %>"
                                                    placeholder="Photography, Hiking, Reading...">
                                                <div class="form-text">Separate multiple hobbies with commas</div>
                                            </div>
                                            <div class="mb-3">
                                                <label for="interests" class="form-label">Interests</label>
                                                <input type="text" class="form-control" id="interests" name="interests"
                                                    value="<%= currentUser.interests ? currentUser.interests.join(', ') : '' %>"
                                                    placeholder="Travel, Food, Culture...">
                                                <div class="form-text">Separate multiple interests with commas</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Travel Preferences -->
                                <div class="col-md-6 mb-4">
                                    <div class="profile-card">
                                        <div class="card-header">
                                            <h5><i class="fa-solid fa-plane me-2"></i>Travel Preferences</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="mb-3">
                                                <label for="favoriteDestinations" class="form-label">Favorite
                                                    Destinations</label>
                                                <input type="text" class="form-control" id="favoriteDestinations"
                                                    name="favoriteDestinations"
                                                    value="<%= currentUser.favoriteDestinations ? currentUser.favoriteDestinations.join(', ') : '' %>"
                                                    placeholder="Paris, Tokyo, New York...">
                                                <div class="form-text">Separate multiple destinations with commas</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Social Links -->
                                <div class="col-md-6 mb-4">
                                    <div class="profile-card">
                                        <div class="card-header">
                                            <h5><i class="fa-solid fa-link me-2"></i>Social Links</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="mb-3">
                                                <label for="website" class="form-label">Website</label>
                                                <input type="url" class="form-control" id="website" name="website"
                                                    value="<%= currentUser.socialLinks ? currentUser.socialLinks.website : '' %>"
                                                    placeholder="https://yourwebsite.com">
                                            </div>
                                            <div class="mb-3">
                                                <label for="instagram" class="form-label">Instagram</label>
                                                <input type="url" class="form-control" id="instagram" name="instagram"
                                                    value="<%= currentUser.socialLinks ? currentUser.socialLinks.instagram : '' %>"
                                                    placeholder="https://instagram.com/username">
                                            </div>
                                            <div class="mb-3">
                                                <label for="twitter" class="form-label">Twitter</label>
                                                <input type="url" class="form-control" id="twitter" name="twitter"
                                                    value="<%= currentUser.socialLinks ? currentUser.socialLinks.twitter : '' %>"
                                                    placeholder="https://twitter.com/username">
                                            </div>
                                            <div class="mb-3">
                                                <label for="linkedin" class="form-label">LinkedIn</label>
                                                <input type="url" class="form-control" id="linkedin" name="linkedin"
                                                    value="<%= currentUser.socialLinks ? currentUser.socialLinks.linkedin : '' %>"
                                                    placeholder="https://linkedin.com/in/username">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary btn-lg me-3">
                                    <i class="fa-solid fa-save me-2"></i>Save Changes
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-lg"
                                    onclick="document.getElementById('view-tab').click();">
                                    <i class="fa-solid fa-times me-2"></i>Cancel
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="text-center mt-4 mb-5">
                    <a href="/listings" class="btn btn-outline-primary me-2">
                        <i class="fa-solid fa-home me-2"></i>Back to Listings
                    </a>
                    <a href="/logout" class="btn btn-outline-danger">
                        <i class="fa-solid fa-sign-out-alt me-2"></i>Logout
                    </a>
                </div>
            </div>
        </div>
    </div>

  <style>
 /* Profile Header */
.profile-header {
    background: linear-gradient(135deg, var(--accent-color), #db5661);
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 0.25rem 0.75rem rgba(0,0,0,0.15);
    color: white;
    margin-bottom: 2rem;
}

.profile-avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: auto;
    box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
}

.profile-header h3 {
    font-weight: 700;
    font-size: 1.8rem;
}

.profile-header p {
    font-size: 0.95rem;
    opacity: 0.9;
}

/* Profile Cards */
.profile-card {
    background: var(--card-bg);
    border-radius: 1rem;
    padding: 10px;
    box-shadow: 0 0.25rem 0.75rem rgba(0,0,0,0.08);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
}

.profile-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 0.5rem 1.25rem rgba(0,0,0,0.12);
}

.profile-card .card-header {
    background: linear-gradient(135deg, var(--accent-color), #e63946);
    color: white;
    border-radius: 1rem 1rem 0 0;
    padding: 1rem 1.25rem;
    font-weight: 600;
}

/* Info Items */
.info-item label {
    font-weight: 600;
    font-size: 0.8rem;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    color: var(--text-secondary);
}

.info-item p {
    font-size: 0.95rem;
    color: var(--text-primary);
}

/* Tags */
.tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
}

.tag {
    background: var(--accent-color);
    color: white;
    padding: 0.35rem 0.75rem;
    border-radius: 1.25rem;
    font-size: 0.8rem;
    font-weight: 500;
}

.destination-tag {
    background: linear-gradient(135deg, #28a745, #20c997);
}

/* Social Links */
.social-link a {
    color: var(--accent-color);
    font-weight: 500;
    transition: all 0.3s ease;
}

.social-link a:hover {
    color: #e63946;
    transform: translateX(5px);
}

/* Tabs */
.nav-tabs {
    border-bottom: none;
    margin-bottom: 1.5rem;
    justify-content: center;
}

.nav-tabs .nav-link {
    color: var(--text-secondary);
    font-weight: 600;
    padding: 0.75rem 1.25rem;
    border: none;
    position: relative;
}

.nav-tabs .nav-link.active {
    color: var(--accent-color);
}

.nav-tabs .nav-link.active::after {
    content: "";
    position: absolute;
    bottom: -6px;
    left: 0;
    right: 0;
    height: 3px;
    border-radius: 2px;
    background: var(--accent-color);
    margin: auto;
}

/* Buttons */
.btn {
    border-radius: 0.6rem;
    padding: 0.6rem 1.25rem;
    font-weight: 600;
    transition: all 0.25s ease;
}

.btn-primary {
    background-color: var(--accent-color);
    border-color: var(--accent-color);
}

.btn-primary:hover {
    background-color:#e63946 ;
    border-color: #e63946;
    box-shadow: 0 0.3rem 0.7rem rgba(254, 66, 77, 0.35);
    transform: translateY(-2px);
}

.btn-outline-primary:hover {
    /* background: var(--accent-color) */
    background-color: rgb(25, 25, 132);
    color: white;
}

.btn-outline-danger:hover {
    background: #dc3545;
    color: white;
}

/* Responsive */
@media (max-width: 768px) {
    .profile-header {
        text-align: center;
        padding: 1.25rem;
    }
    .profile-avatar {
        margin-bottom: 1rem;
    }
    .profile-header h3 {
        font-size: 1.5rem;
    }
}
</style>