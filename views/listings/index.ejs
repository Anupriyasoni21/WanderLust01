      text-align: center;
      opacity: 0.9;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-width: 70px;
      flex-shrink: 0;
      transition: background 0.3s ease, transform 0.2s ease;
      border-radius: 12px;
      padding: 6px 10px;
  }

  .filter:hover {
      opacity: 1;
      background: rgba(255,255,255,0.15);
      cursor: pointer;
      transform: translateY(-2px);
  }

  .filter i {
      font-size: 1.3rem;
      color: white;
      margin-bottom: 0.3rem;
  }

  .filter p {
      font-size: 0.8rem;
      margin: 0;
      color: white;
      white-space: nowrap;
  }

  /* tax toggle restyled */
  .tax-toggle {
      border: 1px solid rgba(255,255,255,0.7);
      border-radius: 1rem;
      padding: 0.5rem 1rem;
      background: rgba(255,255,255,0.2);
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
      margin-left: auto;
      color: white;
  }

  /* Hide scrollbar */
  #filters::-webkit-scrollbar {
      display: none;
  }

  /* Card refinements */
  .listing-card {
      border: none !important;
      border-radius: 1.2rem !important;
      overflow: hidden;
      box-shadow: 0 6px 18px rgba(0,0,0,0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      background: white;
  }

  .listing-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 22px rgba(0,0,0,0.15);
  }

  .listing-image-container {
      height: 18rem;
  }

  .listing-card img {
      object-fit: cover;
      width: 100%;
      height: 100%;
  }

  .listing-card .card-body {
      padding: 1rem;
  }

  .listing-card .card-body b {
      color: #004d40;
  }

  /* Footer */
